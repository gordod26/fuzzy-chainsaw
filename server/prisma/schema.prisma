// 1

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// 2
generator client {
  provider = "prisma-client-js"
  previewFeatures = ["referentialActions"]

}

// 3
model Post {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  description String
  postedBy    User?    @relation(fields: [postedById], references: [id])
  postedById  Int?
  votes       Vote[]
  parentId    Int?  
  parent      Post? @relation(name: "ParentComments", fields: [parentId], references: [id])
  comments    Post[] @relation(name: "ParentComments") 
  deleted      Boolean @default(false)
  //tags        Tags[]
  //pinned      Boolean @default(false)
  //parentVer   Version @relation(fields: [])
  //parentCh    Int
  //verseRef    Int[]
  //userRef     User[]
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  posts     Post[]
  votes     Vote[]
  avitar    Avitar?
}

model Vote {
  id     Int  @id @default(autoincrement())
  post   Post @relation(fields: [postId], references: [id], onDelete: Cascade)
  postId Int
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId Int
  
  @@unique([postId, userId])
}

model Avitar {
  id Int @id @default(autoincrement())
  user User @relation(fields: [userId], references: [id])
  userId Int @unique
  name String
  color0 String @default("#554236")
  color1 String @default("#f77825")
  color2 String @default("#d3ce3d")
  color3 String @default("#f1efa5")
  color4 String @default("#60b99a")
}

model Tags {
  id     Int  @id @default(autoincrement())
  name   String @unique
}

